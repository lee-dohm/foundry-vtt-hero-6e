<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="64" width="64"/>
    <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Name"/></h1>
  </header>

  <div class="flexrow">
    <section class="characteristics-block flexcol m-1">
      <div class="section-header">{{localize "hero6e.characteristic.plural"}}</div>
      {{#each data.characteristics}}
        <div class="flexrow flexalign-center my-1">
          <div>
            <input name="data.characteristics.{{@key}}.value" type="text" value="{{this.value}}" data-dtype="Number"/>
          </div>
          <div class="mx-1">
            {{localize (concat "hero6e.characteristic.names." @key)}}
          </div>
          <div>
            {{#if this.roll}}
              {{this.roll}}-
            {{/if}}
          </div>
        </div>
      {{/each}}
    </section>

    <div class="flex3 m-1">
      <section class="skills-block">
        <div class="section-header">{{localize "hero6e.skill.plural"}}</div>

        {{#each data.skills}}
          <div class="flexrow">
            <div class="flex4">{{this.name}}</div>
            <div>
              {{#if (and this.roll this.roll.base)}}
                {{this.roll.base}}
              {{/if}}
            </div>
          </div>
        {{else}}
          <div class="blankslate">No skills</div>
        {{/each}}
      </section>

      <section class="powers-block">
        <div class="section-header">{{localize "hero6e.power.plural"}}</div>

        {{#each data.powers}}
          <div class="flexrow">
            <div class="flex4">{{this.name}}</div>
          </div>
        {{else}}
          <div class="blankslate">No powers</div>
        {{/each}}
      </section>

      <section class="complications-block">
        <div class="section-header">{{localize "hero6e.complication.plural"}}</div>

        {{#each data.complications}}
          <div class="flexrow">
            <div class="flex4">{{this.name}}</div>
          </div>
        {{else}}
          <div class="blankslate">No complications</div>
        {{/each}}
      </section>
    </div>

    <div class="flex3 m-1">
      <section class="equipment-block">
        <div class="section-header">{{localize "hero6e.equipment"}}</div>

        {{#each data.equipment}}
          <div class="flexrow">
            <div class="flex4">{{this.name}}</div>
          </div>
        {{else}}
          <div class="blankslate">No equipment</div>
        {{/each}}
      </section>
    </div>
  </div>

</form>
