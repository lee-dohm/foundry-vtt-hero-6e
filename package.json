{
  "name": "foundry-vtt-hero-6e",
  "version": "0.1.0",
  "description": "HERO System 6th Edition game system for Foundry VTT",
  "main": "modules/hero6e.js",
  "scripts": {
    "build": "npm run build-styles",
    "build-styles": "npx lessc less/hero6e.less styles/hero6e.css",
    "ci": "npm run format-check && npm run lint && npm run build",
    "format": "prettier --write **/*.js **/*.md **/*.yaml",
    "format-check": "prettier --check **/*.js **/*.md **/*.yaml",
    "lint": "npx eslint modules/**/*.js",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lee-dohm/foundry-vtt-hero-6e.git"
  },
  "author": "@lee-dohm",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lee-dohm/foundry-vtt-hero-6e/issues"
  },
  "homepage": "https://github.com/lee-dohm/foundry-vtt-hero-6e#readme",
  "devDependencies": {
    "eslint": "^7.20.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^24.1.5",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "less": "^4.1.1",
    "prettier": "^2.2.1"
  }
}
